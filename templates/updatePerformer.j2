    <title>{% block title %}Update Performer{% endblock %}</title>

  <header>
    {% block header %}<h1>Update Performer</h1>{% endblock %}
  </header>


  
<div class="col">
    <div>
      <div class="card card-body">
        <form action="{{ url_for('updatePerformer', id=performer['performer_id'])}}" method="post">
          <div>
            <div>
              <label for="performer_first_name">First Name: </label>
              <input type="text" name="performer_first_name" value="{{ request.form['first_name'] or performer['performer_first_name'] }}" required>
              <label for="performer_last_name">Last Name: </label>
              <input type="text" name="performer_last_name" value="{{ request.form['last_name'] or performer['performer_last_name'] }}" required>
            </div>
            <div>
              <label for="performer_city">City: </label>
              <input type="text" name="performer_city" value="{{ request.form['city'] or performer['performer_city'] }}" required>
              <label for="performer_state"">State: </label>
              <input type="text" name="performer_state" value="{{ request.form['state'] or performer['performer_state'] }}" required>
            </div>
            <div>
              <label for="performer_height_in">Height (inches): </label>
              <input type="number" name="performer_height_in" value="{{ request.form['height'] or performer['performer_height_in'] }}" required>
              <label for="performer_hair_color">Hair Color: </label>
              <input type="text" name="performer_hair_color" value="{{ request.form['hair_color'] or performer['performer_hair_color'] }}" required>
            </div>
            <div>
              <label for="performer_eye_color">Eye Color: </label>
              <input type="text" name="performer_eye_color" value="{{ request.form['eye_color'] or performer['performer_eye_color'] }}" required>
              <label for="performer_weight_lbs">Weight (lbs): </label>
              <input type="number" name="performer_weight_lbs" value="{{ request.form['weight'] or performer['performer_weight_lbs'] }}" required>
            </div>
            <div>
              <label for="performer_rating">Rating (ex. 0.55): </label>
              <input type="number" step="0.01" name="performer_rating" value="{{ request.form['rating'] or performer['performer_rating'] }}" required>
              <label for="performer_dob">Date of Birth: </label>
              <input type="date" name="performer_dob" value="{{ request.form['dob'] or performer['performer_dob'] }}" required>
            </div>
            <div>
              <label for="performer_gender">Gender: </label>                            
                              <select id="gender-selection" name="performer_gender" value="{{ request.form['gender'] or performer['performer_gender'] }}" required>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                                <option value="Non-Disclosed">I don't want to answer</option>
                              </select>
              <label for="performer_ethnicity">Ethnicity: </label>
                              
                              <select id="ethnicity-selection" name="performer_ethnicity" value="{{ request.form['ethnicity'] or performer['performer_ethnicity'] }}" required>
                                <option value="Caucasian">Caucasian</option>
                                <option value="African_American">African American</option>
                                <option value="Hispanic_Latino">Hispanic or Latino</option>
                                <option value="Asian">Asian</option>
                                <option value="Native_American">Native American</option>
                                <option value="Other">Other</option>
                              </select>
            </div>
            <br>          
            <input type="submit" class="btn btn-primary"></input>              
          </form>
        </div>
      </div>
