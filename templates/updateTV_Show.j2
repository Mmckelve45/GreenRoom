    <title>{% block title %}Update TV_Show{% endblock %}</title>

  <header>
    {% block header %}<h1>Update TV_Show</h1>{% endblock %}
  </header>


  
<div class="col">
    <div>
      <div class="card card-body">
        <form action="{{ url_for('updateTV_Show', id=tv_show['tv_show_id'])}}" method="post"> <!--------------------------------------------------------------->
          <div>
            <div>
              <label for="tv_show_title">Title: </label>
              <input type="text" name="tv_show_title" value="{{request.form['title'] or tv_show['tv_show_title']}}" required>
              <label for="tv_show_release_date">Release Date: </label>
              <input type="date" name="tv_show_release_date" value="{{request.form['release_date'] or tv_show['tv_show_release_date']}}" required>
            </div>
            <div>
              <label for="tv_show_season">Season: </label>
              <input type="number" name="tv_show_season" value="{{request.form['season'] or tv_show['tv_show_season']}}" required>
              <label for="tv_show_episode">Episode Number: </label>
              <input type="number" name="tv_show_episode" value="{{request.form['episode'] or tv_show['tv_show_episode']}}" required>
            </div>
            <div>
              <label for="tv_show_runtime">Runtime (minutes): </label>
              <input type="number" name="tv_show_runtime" value="{{request.form['runtime'] or tv_show['tv_show_runtime']}}" required>
              <label for="tv_show_episode_part">Episode Part: </label>
              <input type="number" name="tv_show_episode_part" value="{{request.form['episode_part'] or tv_show['tv_show_episode_part']}}" required>
            </div>
            <div>
              <label for="tv_show_budget">Budget: </label>
              <input type="number" step="0.01" name="tv_show_budget" value="{{request.form['budget'] or tv_show['tv_show_budget']}}" required>
              <label for="tv_show_director_first_name">Director First Name: </label>
              <input type="text" name="tv_show_director_first_name" value="{{request.form['director_first_name'] or tv_show['tv_show_director_first_name']}}" required>
              <label for="tv_show_director_last_name">Director Last Name: </label>
              <input type="text" name="tv_show_director_last_name" value="{{request.form['director_last_name'] or tv_show['tv_show_director_last_name']}}" required>
            </div>
            <div>
              <label for="tv_show_rating_tomatoes_audience">Rotten Tomatoes Audience Rating (ex. 0.55): </label>
              <input type="number" step="0.01" name="tv_show_rating_tomatoes_audience" value="{{request.form['rating_tomatoes_audience'] or tv_show['tv_show_rating_tomatoes_audience']}}" required>
              <label for="tv_show_rating_tomatoes_critic">Rotten Tomatoes Critic Rating(ex. 0.55): </label>
              <input type="number" step="0.01" name="tv_show_rating_tomatoes_critic" value="{{request.form['rating_tomatoes_critic'] or tv_show['tv_show_rating_tomatoes_critic']}}" required>
            </div>
            <div>
              <label for="tv_show_rating_imdb_audience">IMDB Audience Rating (ex. 0.55): </label>
              <input type="number" step="0.01" name="tv_show_rating_imdb_audience" value="{{request.form['rating_imdb_audience'] or tv_show['tv_show_rating_imdb_audience']}}" required>
              <label for="tv_show_rating_imdb_critic">IMDB Critic Rating(ex. 0.55): </label>
              <input type="number" step="0.01" name="tv_show_rating_imdb_critic" value="{{request.form['rating_imdb_critic'] or tv_show['tv_show_rating_imdb_critic']}}" required>
            </div>
            <div>
              <label for="tv_show_rating_meta_audience"><MetaCritic Audience Rating (ex. 0.55): </label>
              <input type="number" step="0.01" name="tv_show_rating_meta_audience" value="{{request.form['rating_meta_audience'] or tv_show['tv_show_rating_meta_audience']}}" required>
              <label for="tv_show_rating_meta_critic">MetaCritic Critic Rating(ex. 0.55): </label>
              <input type="number" step="0.01" name="tv_show_rating_meta_critic" value="{{request.form['rating_meta_critic'] or tv_show['tv_show_rating_meta_critic']}}" required>
            </div>
            <br>          
            <input type="submit" class="btn btn-primary"></input>              
          </form>
        </div>
