    <title>{% block title %}Update Movie{% endblock %}</title>

  <header>
    {% block header %}<h1>Update Movie</h1>{% endblock %}
  </header>


<div class="col">
    <div>
      <div class="card card-body">
        <form action="{{ url_for('updateMovieCreditUserReviews', id=movieCreditUserReview['movie_credit_user_review_id'])}}" method="POST">
          <div>
            <div>
              <label for="user_id">User Id: </label>
              <input type="number" name="user_id" value="{{ request.form['user_id'] or movieCreditUserReview['user_id'] }}" required>
              <label for="movie_credit_id">Movie Credit Id: </label>
              <input type="number" name="movie_credit_id" value="{{ request.form['movie_credit_id'] or movieCreditUserReview['movie_credit_id'] }}" required>
            </div>
            <div>
              <label for="movie_credit_user_review_performer_rating">Rating: </label>
              <input type="number" step="0.01" name="movie_credit_user_review_performer_rating" value="{{ request.form['rating'] or movieCreditUserReview['movie_credit_user_review_performer_rating'] }}" required>
              <label for="movie_credit_user_review_description">Description: </label>
              <input type="text" name="movie_credit_user_review_description" value="{{ request.form['description'] or movieCreditUserReview['movie_credit_user_review_description'] }}" required>
            </div>
            <div>
              <label for="movie_credit_user_review_date">Review Date: </label>
              <input type="text" name="movie_credit_user_review_date" value="{{ request.form['date'] or movieCreditUserReview['movie_credit_user_review_date'] }}" required>
            </div>
            <br>          
            <input type="submit" class="btn btn-primary"></input>              
          </form>
        </div>
      </div>
  </div>


    