    <title>{% block title %}Update Performer{% endblock %}</title>

  <header>
    {% block header %}<h1>Update Performer</h1>{% endblock %}
  </header>


  # user_first_name, user_last_name, user_dob, user_email, user_ethnicity, user_gender, user_login_id, user_password
<div class="col">
    <div>
      <div class="card card-body">
        <form action="{{ url_for('updateUser', id=user['user_id'])}}" method="post">
          <div>
            <div>
              <label for="user_first_name">First Name: </label>
              <input type="text" name="user_first_name" value="{{ request.form['first_name'] or user['user_first_name'] }}" required>
              <label for="user_last_name">Last Name: </label>
              <input type="text" name="user_last_name" value="{{ request.form['last_name'] or user['user_last_name'] }}" required>
            </div>
            <div>
              <label for="user_dob">Date of Birth: </label>
              <input type="date" name="user_dob" value="{{ request.form['dob'] or user['user_dob'] }}" required>
              <label for="user_email"">Email: </label>
              <input type="email" name="user_email" value="{{ request.form['email'] or user['user_email'] }}" required>
            </div>
            <div>
              <label for="user_ethnicity">Ethnicity: </label>
                              
                              <select id="ethnicity-selection" name="user_ethnicity" value="{{ request.form['ethnicity'] or user['user_ethnicity'] }}" required>
                                <option value="Caucasian">Caucasian</option>
                                <option value="African_American">African American</option>
                                <option value="Hispanic_Latino">Hispanic or Latino</option>
                                <option value="Asian">Asian</option>
                                <option value="Native_American">Native American</option>
                                <option value="Other">Other</option>
                              </select>
              <label for="user_gender">Gender: </label>                            
                              <select id="gender-selection" name="user_gender" value="{{ request.form['gender'] or user['user_gender'] }}" required>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                                <option value="Non-Disclosed">I don't want to answer</option>
                              </select>
            </div>
            <div>
              <label for="user_login_id">Login Id: </label>
              <input type="text" name="user_login_id" value="{{ request.form['login_id'] or user['user_login_id'] }}" required>
              <label for="user_password">Password: </label>
              <input type="password" name="user_password" value="{{ request.form['password'] or user['user_password'] }}" required>
            </div>
            <br>          
            <input type="submit" class="btn btn-primary"></input>              
          </form>
        </div>
      </div>
  </div>


    