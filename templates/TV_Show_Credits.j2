    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                      
                        <!-- Page Heading -->

                       <h2>Manage <b>TV_Show_Credits</b></h2>
                        <br></br>
                        <!-- Add New Collapse Field-->

                        <p>
                          <button class="btn btn-success" data-bs-toggle="collapse" href="#collapseAddNew" role="button" aria-expanded="false" aria-controls="collapseAddNew">
                            Add New
                          </button>
                        </p>
                        <div class="collapse" id="collapseAddNew">
                          <div class="card card-body">
                            <form action="/createTV_Show_Credit" method="post">
                              <fieldset>
                                <label>
                                  Performer ID
                                </label>
                                <br>
                                <input type="number" name="performer_id">
                                <br>
                                <label>
                                  TV Show ID
                                </label>
                                <br>
                                <input type="number" name="tv_show_id">
                                <br>
                                <label>
                                  Performer's Payment
                                </label>
                                <br>
                                <input type="number" step="0.01" name="tv_show_credit_payment">
                                <br>
                                <label>
                                  Performer's Role
                                </label>
                                <br>
                                <input type="text" name="tv_show_credit_role">
                                <br>
                                <br>
                                <label>
                                  Leading Role?
                                </label>
                                <select id="leading_role_selection" name="tv_show_credit_leading_role">
                                  <option value=1>Yes</option>
                                  <option value=0>No</option>
                                </select>
                                <br>
                                <br>
                                <label>
                                  Emmy Award?
                                </label>
                                <select id="emmy_selection" name="tv_show_credit_emmy">
                                  <option value=1>Yes</option>
                                  <option value=0>No</option>
                                </select>
                                <br>
                                <br>

                              </fieldset>
                              <input type="submit" class="btn btn-primary">
                            </form>
                          </div>
                        </div>

                       <!-- Delete Selected Modal Button -->

                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#deleteModal">
                          Delete Selected
                        </button>

                        <!-- Search Bar -->

                        <br>
                        <br>
                        <div>
                        <form action="{{ url_for('searchTV_Show_Credits') }}" method="POST"> <!--------------------------------------------------------------->
                              <input type="search" class="form-control" id="searchbar" name="performer_last_name" placeholder="Search by Performer Last Name"> <!--------------------------------------------------------------->
                              <button class="btn btn-secondary" id="delete-btn1">Search</button> 
                        </form>
