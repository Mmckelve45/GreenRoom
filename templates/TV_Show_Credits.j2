<div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample2">
      <div class="card card-body">
        <form action="/updateTV_Show_Credit" method="post"> <!--------------------------------------------------------------->
          <div>
            <div>
              <label for="tv_show_credit_payment">Payment Received: </label>
              <input type="number" name="tv_show_credit_payment">
              <label for="tv_show_credit_role">Role </label>
              <input type="text" name="tv_show_credit_role">
            </div>
            <div>
              <label for="tv_show_credit_leading_role">Leading Role? (1 for y, 0 for n)</label>
              <input type="number" name="tv_show_credit_leading_role">
              <label for="tv_show_credit_emmy">Emmy? (1 for y, 0 for n)</label>
              <input type="number" name="tv_show_credit_emmy">
            </div>
            
            <br>          
            <input type="submit" class="btn btn-primary"></input>              
          </form>
        </div>
      </div>
  </div>

             <!-- Entity Table -->

            <table class="table table-striped table-hover align-middle">
                <thead class="align-middle">
                    <tr>
                            <th></th>
                            <th></th>
                            <th>
                                <!-- Select All Checkbox -->
                                <span>
                                    <input type="checkbox" class="btn-check" id="selectAll" autocapitalize="off">
                                    <label class="btn btn-outline-primary" for="selectAll"><i class="bi bi-check"></i></label>
                                </span>
                            </th>
                            <!-- Iterate through each key in the first entry to get the
                            column name -->
                            {% for key in TV_Show_Credits[0].keys() %}

                            <!-- Create a <th> tag with the key inside of it, this will be
                            our header row -->
                            <th>{{ key }}</th>

                            <!-- End of this for loop -->
                            {% endfor %}
                    </tr>
                </thead>
                <tbody> 
                    {% for tv_show_credit in TV_Show_Credits %}
                    <tr>
                        <!-- Pencil and Garbage Can Inline Buttons -->
                        <td>
                            <a class="action" href="{{ url_for('updateTV_Show_Credit', id=tv_show_credit['tv_show_credit_id'] )}}" method="GET"> <!--------------------------------------------------------------->
                              <button class="btn btn-secondary" id="edit-btn1" ><i class="bi bi-pencil"></i></button> 
                            </a>
                        </td> 
   
                                  
                        <td> 
                            <form action="{{ url_for('deleteTV_Show_Credit', id=tv_show_credit['tv_show_credit_id']) }}" method="POST"> <!--------------------------------------------------------------->
                              <button class="btn btn-secondary" id="delete-btn1"><i class="bi bi-trash"></i></button>
                            </form>
                        <!-- Checkbox --> 
                        <td>
                            <span>
                                <input type="checkbox" class="btn-check" id="checkbox1" autocapitalize="off">
                                <label class="btn btn-outline-primary" for="checkbox1"><i class="bi bi-check"></i></label>
                            </span>
                        </td>
                        <td>{{ tv_show_credit['tv_show_credit_id'] }}</td> <!---------------------------------------------------------------> <!--------------------------------------------------------------->
                        <td>{{ tv_show_credit['performer_id'] }}</td>
                        <td>{{ tv_show_credit['tv_show_id'] }}</td>
                        <td>{{ tv_show_credit['tv_show_credit_payment'] }}</td>
                        <td>{{ tv_show_credit['tv_show_credit_role'] }}</td>
                        <td>{{ tv_show_credit['tv_show_credit_leading_role'] }}</td>
                        <td>{{ tv_show_credit['tv_show_credit_emmy'] }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="clearfix">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link">Previous</a></li>
                    <li class="page-item"><a class="page-link">Next</a></li>
                </ul>
            </div>
        
