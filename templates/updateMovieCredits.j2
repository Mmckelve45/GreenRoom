    <title>{% block title %}Update Movie{% endblock %}</title>

  <header>
    {% block header %}<h1>Update Movie</h1>{% endblock %}
  </header>


  
<div class="col">
    <div>
      <div class="card card-body">
        <form action="{{ url_for('updateMovieCredits', id=movieCredit['movie_credit_id'])}}" method="POST">
          <div>
            <div>
              <label for="performer_id">Performer Id: </label>
              <input type="number" name="performer_id" value="{{ request.form['performer_id'] or movieCredit['performer_id'] }}" required>
              <label for="movie_id">Movie Id: </label>
              <input type="number" name="movie_id" value="{{ request.form['movie_id'] or movieCredit['movie_id'] }}" required>
            </div>
            <div>
              <label for="movie_credit_payment">Payment: </label>
              <input type="number" name="movie_credit_payment" value="{{ request.form['payment'] or movieCredit['movie_credit_payment'] }}" required>
              <label for="movie_credit_role">Role: </label>
              <input type="text" name="movie_credit_role" value="{{ request.form['role'] or movieCredit['movie_credit_role'] }}" required>
            </div>
            <div>
              <label for="movie_credit_lead_role">Lead Role:</label>                
                              <select id="leadRole" name="movie_credit_lead_role" value="{{ request.form['lead'] or movieCredit['movie_credit_lead_role'] }}" required>
                                <option value="0">False</option>
                                <option value="1">True</option>
                              </select>

              <label for="movie_credit_oscar">Lead Role:</label>                
                              <select id="Oscar" name="movie_credit_oscar" value="{{ request.form['oscar'] or movieCredit['movie_credit_oscar'] }}" required>
                                <option value="0">False</option>
                                <option value="1">True</option>
                              </select>
            </div>
            <br>          
            <input type="submit" class="btn btn-primary"></input>              
          </form>
        </div>
      </div>
  </div>


    