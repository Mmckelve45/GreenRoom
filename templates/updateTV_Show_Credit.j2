    <title>{% block title %}Update TV_Show_Credits{% endblock %}</title>

  <header>
    {% block header %}<h1>Update TV_Show_Credits</h1>{% endblock %}
  </header>


  
<div class="col">
    <div>
      <div class="card card-body">
        <form action="{{ url_for('updateTV_Show_Credit', id=tv_show_credit['tv_show_credit_id'])}}" method="post"> <!--------------------------------------------------------------->
          <div>
            <div>
              <label for="performer_id">Performer ID: </label>
              <input type="number" name="performer_id" value="{{request.form['performer_id'] or tv_show_credit['performer_id']}}" required>
              <label for="tv_show_id">TV Show ID: </label>
              <input type="number" name="tv_show_id" value="{{request.form['tv_show_id'] or tv_show_credit['tv_show_id']}}" required>
            </div>
            <div>
              <label for="tv_show_credit_payment">Performer Payment: </label>
              <input type="number" step="0.01" name="tv_show_credit_payment" value="{{request.form['payment'] or tv_show_credit['tv_show_credit_payment']}}" required>
              <label for="tv_show_credit_role">Performer Role: </label>
              <input type="text" name="tv_show_credit_role" value="{{request.form['role'] or tv_show_credit['tv_show_credit_role']}}" required>
            </div>
            <div>
              <label for="tv_show_credit_leading_role">Leading Role? </label>
              <select name="tv_show_credit_leading_role" value="{{request.form['leading_role'] or tv_show_credit['tv_show_credit_leading_role']}}" required>
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
              <label for="tv_show_credit_emmy">Emmy?: </label>
              <select name="tv_show_credit_emmy" value="{{request.form['emmy'] or tv_show_credit['tv_show_credit_emmy']}}" required>
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
            </div>
            <br>          
            <input type="submit" class="btn btn-primary"></input>              
          </form>
        </div>
      </div>
  </div>


    