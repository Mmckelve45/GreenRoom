      </nav>
    </header>
    <br></br>
    <br></br>
    <br></br>
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">	
                        
                        <!-- Page Heading -->

                        <h2>Manage <b>TV_Shows</b></h2>
                        <br></br>
                        <!-- Add New Collapse Field-->

                        <p>
                          <button class="btn btn-success" data-bs-toggle="collapse" href="#collapseAddNew" role="button" aria-expanded="false" aria-controls="collapseAddNew">
                            Add New
                          </button>
                        </p>
                        <div class="collapse" id="collapseAddNew">
                          <div class="card card-body">
                            <form action="/createTV_Show" method="post">
                              <fieldset>
                                <label>
                                  TV Show Title
                                </label>
                                <br>
                                <input type="text" name="tv_show_title" required>
                                <br>
                                <label>
                                  TV Show Release Date
                                </label>
                                <br>
                                <input type="date" name="tv_show_release_date" required>
                                <br>
                                <label>
                                  TV Show Season
                                </label>
                                <br>
                                <input type="number" name="tv_show_season" required>
                                <br>
                                <label>
                                  TV Show Episode
                                </label>
                                <br>
                                <input type="number" name="tv_show_episode" required>
                                <br>
                                <label>
                                  TV Show Runtime (In Minutes)
                                </label>
                                <br>
                                <input type="number" name="tv_show_runtime" required>
                                <br>
                                <label>
                                  TV Show Episode Part
                                </label>
                                <br>
                                <input type="number" name="tv_show_episode_part" required>
                                <br>
                                <label>
                                  TV Show Budget
                                </label>
                                <br>
                                <input type="number" name="tv_show_budget" required>
                                <br>
                                <label>
                                  TV Show Director
                                </label>
                                <br>
                                <input type="text" name="tv_show_director_first_name" placeholder="First Name" required>
                                <br>
                                <input type="text" name="tv_show_director_last_name" placeholder="Last Name" required>
                                <br>
                                <label>
                                  Rotten Tomatoes Critic Rating
                                </label>
                                <br>
                                <input type="number" step="0.01" name="tv_show_rating_tomatoes_critic" required>
                                <br>
                                <label>
                                  Rotten Tomatoes Audience Rating
                                </label>
                                <br>
                                <input type="number" step="0.01" name="tv_show_rating_tomatoes_audience" required>
                                <br>
                                <label>
                                  IMDB Critic Rating
                                </label>
                                <br>
                                <input type="number" step="0.01" name="tv_show_rating_imdb_critic" required>
                                <br>
                                <label>
                                  IMDB Audience Rating
                                </label>
                                <br>
                                <input type="number" step="0.01" name="tv_show_rating_imdb_audience" required>
                                <br>
                                <label>
                                  Metacritic Critic Rating
                                </label>
                                <br>
                                <input type="number" step="0.01" name="tv_show_rating_meta_critic" required>
                                <br>
                                <label>
                                  Metacritic Audience Rating
                                </label>
                                <br>
                                <input type="number" step="0.01" name="tv_show_rating_meta_audience" required>
                              </fieldset>
                              <br>
                              <input type="submit" class="btn btn-primary"></input>
                            </form>
                          </div>
                        </div>

                       <!-- Delete Selected Modal Button -->

                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#deleteModal">
                          Delete Selected
                        </button>

                        <!-- Search Bar -->

                        <br>
                        <br>
                        <div>
                          <form action="{{ url_for('searchTV_Shows') }}" method="POST">
                            <input type="search" class="form-control" id="searchbar" name="tv_show_title" placeholder="Search by Title...">
                            <button class="btn btn-secondary" id="search-btn">Search</button>
                          </form>                        			
                    </div>
                </div>
            </div>
            <br>

            <!-- Entity Table -->
          
            <table class="table table-striped table-hover align-middle">
                <thead class="align-middle">
                    <tr>
                            <th></th>
                            <th></th>
                            <th>
                                <!-- Select All Checkbox -->
                                <span>
                                    <input type="checkbox" class="btn-check" id="selectAll" autocapitalize="off">
                                    <label class="btn btn-outline-primary" for="selectAll"><i class="bi bi-check"></i></label>
                                </span>
                            </th>
                            <!-- Iterate through each key in the first entry to get the
                            column name -->
                            {% for key in TV_Shows[0].keys() %}

                            <!-- Create a <th> tag with the key inside of it, this will be
                            our header row -->
                            <th>{{ key }}</th>

                            <!-- End of this for loop -->
                            {% endfor %}
                    </tr>
                </thead>
                <tbody> 
                    {% for tv_show in TV_Shows %}
                    <tr>
                        <!-- Pencil and Garbage Can Inline Buttons - href BELOW IS FOR GETTV_SHOW FUNCTION!!!!!! -->
                        <td>
                            <a class="action" href="{{ url_for('updateTV_Show', id=tv_show['tv_show_id'] )}}" method="GET">
                              <button class="btn btn-secondary" id="edit-btn1" ><i class="bi bi-pencil"></i></button> 
                            </a>
                        </td>

                        <td> 
                            <a class="action" href="{{ url_for('deleteTV_Show', id=tv_show['tv_show_id']) }}" method="POST"> 
                              <button class="btn btn-secondary" id="delete-btn1" data-bs-toggle="modal" data-bs-target="#deleteModal"><i class="bi bi-trash"></i></button>
                              </a>
                        </td>
                          <!-- Delete Selected Modal -->

                        {# <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalTitle" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalTitle">Are You Sure?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                Your selection will be permanently removed and cannot be recovered.
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <a class="action" href="{{ url_for('deleteTV_Show', id=tv_show['tv_show_id']) }}" method="POST"> 
                                  <button type="button" class="btn btn-danger">Delete</button>
                                </a>
                              </div>
                            </div>
                          </div>
                        </div> #}
                        <!-- Checkbox --> 
                        <td>
                            <span>
                                <input type="checkbox" class="btn-check" id="checkbox1" autocapitalize="off">
                                <label class="btn btn-outline-primary" for="checkbox1"><i class="bi bi-check"></i></label>
                            </span>
                        </td>
                        <td>{{ tv_show['tv_show_id'] }}</td> <!---------------------------------------------------------------> <!--------------------------------------------------------------->
                        <td>{{ tv_show['tv_show_title'] }}</td>
                        <td>{{ tv_show['tv_show_release_date'] }}</td>
                        <td>{{ tv_show['tv_show_season'] }}</td>
                        <td>{{ tv_show['tv_show_episode'] }}</td>
                        <td>{{ tv_show['tv_show_runtime'] }}</td>
                        <td>{{ tv_show['tv_show_episode_part'] }}</td>
                        <td>{{ tv_show['tv_show_budget'] }}</td>
                        <td>{{ tv_show['tv_show_director_first_name'] }}</td>
                        <td>{{ tv_show['tv_show_director_last_name'] }}</td>
                        <td>{{ tv_show['tv_show_rating_tomatoes_audience'] }}</td>
                        <td>{{ tv_show['tv_show_rating_tomatoes_critic'] }}</td>
                        <td>{{ tv_show['tv_show_rating_imdb_audience'] }}</td>
                        <td>{{ tv_show['tv_show_rating_imdb_critic'] }}</td>
                        <td>{{ tv_show['tv_show_rating_meta_audience'] }}</td>
                        <td>{{ tv_show['tv_show_rating_meta_critic'] }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <!-- Pagination -->
            <div class="clearfix">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link">Previous</a></li>
                    <li class="page-item"><a class="page-link">Next</a></li>
                </ul>
            </div>
        
    <!-- Add Bootstrap JS v4 and v5 MAY NEED BOOTSTRAP INSTALLED in Node.js backend-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>